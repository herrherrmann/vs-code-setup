{
    "Add Angular Form Input": {
		"prefix": "input-angular",
		"body": [
			"<div class=\"form-group\" ng-class=\"{'has-feedback has-error': ${1:$$ctrl.form.name}.$$dirty && !${1:$$ctrl.form.name}.$$valid}\">",
			"	<label class=\"control-label\">",
			"		${2:Name}",
			"	</label>",
			"	<input",
			"		class=\"form-control\"",
			"		type=\"text\"",
			"		ng-model=\"${3:$$ctrl.entity.name}\"",
			"		name=\"${4:name}\"",
			"		${5:required}>",
			"	<span",
			"		ng-show=\"${1:$$ctrl.form.name}.$$dirty && !${1:$$ctrl.form.name}.$$valid\"",
			"		class=\"glyphicon glyphicon-remove form-control-feedback\"",
			"		aria-hidden=\"true\">",
			"	</span>",
			"	<small class=\"text-danger\" ng-show=\"${1:$$ctrl.form.name}.$$dirty && !${1:$$ctrl.form.name}.$$valid\">",
			"		${6:Invalid value!}",
			"	</small>",
			"</div>$7"
		],
		"description": "Add default Form Text Input for Angular 1.X (incl. validation)"
	}
}